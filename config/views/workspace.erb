<div class="panel-group" id="<%= workspace.id %>_container" role="tablist" aria-multiselectabl="false">
  <div class="panel panel-default">

    <div class="panel-heading" role="tab" id="navRoot">
      <h5 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="<%= workspace.id %>_container" href="#<%= workspace.id %>" aria-expanded="false" aria-controls="collapseOne">
          <span class="glyphicon glyphicon-duplicate"></span>&nbsp;<%= workspace.name %> (<%= workspace.sheets.size %>)
        </a>
      </h5>
    </div>

    <div id="<%= workspace.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="<%= workspace.id %>">
      <div class="panel-body">
        <% unless workspace.sheets.empty? %>
          <% workspace.sheets.each do |sheet| %>
            <%= erb :sheet, locals: {sheet: sheet} %>
          <% end %>
        <% end %>

        <% unless workspace.folders.empty? %>
          <% workspace.folders.each do |folder| %>
            <%= erb :folder, locals: {folder: folder} %>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
