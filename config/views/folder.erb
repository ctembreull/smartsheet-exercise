<div class="panel-group" id="<%= folder.id %>_container" role="tablist" aria-multiselectabl="false">
  <div class="panel panel-default">

    <div class="panel-heading" role="tab" id="navRoot">
      <h5 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="<%= folder.id %>_container" href="#<%= folder.id %>" aria-expanded="false" aria-controls="collapseOne">
          <span class="glyphicon glyphicon-folder-open"></span>&nbsp;<%= folder.name %>
          (<%= folder.sheets.size + folder.folders.size %>)
        </a>
      </h5>
    </div>

    <div id="<%= folder.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="<%= folder.id %>">
      <div class="panel-body">
        <% unless folder.sheets.empty? %>
          <% folder.sheets.each do |sheet| %>
            <%= erb :sheet, locals: {sheet: sheet} %>
          <% end %>
        <% end %>
        <% unless folder.folders.empty? %>
          <% folder.folders.each do |subfolder| %>
            <%= erb :folder, locals: {folder: subfolder} %>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
